<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <form method="post" action="/formdata">
        <table
            class="mt-5 w-50 m-auto table-dark table-striped table border border-2 border-secondary text-center text-uppercase align-middle">
            <tr>
                <td>BOOK NAME</td>
                <td><input type="text" class="w-100 p-2" name="name"></td>
            </tr>
            <tr>
                <td>BOOK PRICE</td>
                <td><input type="text" class="w-100 p-2" name="price"></td>
            </tr>
            <tr>
                <td>PAGES</td>
                <td>
                    <select name="page" class="w-100 p-2">
                        <option value="----">-------</option>
                        <% let pages=["0-200" , "200-400" , "400-600" ]; 
                            pages.map((val)=>{
                            %>
                            <option value="<%= val %>">
                                <%= val %>
                            </option>
                            <% }) %>
                    </select>
                </td>
            </tr>
            <tr>
                <td>BOOK AUTHOR</td>
                <td><input type="text" class="w-100 p-2" name="author"></td>
            </tr>
            <tr class="m-3">
                <td colspan="2">
                    <input type="submit" value="submit" class="btn btn-light my-2">
                </td>
            </tr>
        </table>


        <table class="mt-5 w-50 m-auto table-dark table-striped table border border-2 border-secondary text-center ">
            <tr class="text-uppercase">
                <th>NAME</th>
                <th>PRICE</th>
                <th>PAGES</th>
                <th>AUTHOR</th>
                <th>ACTION</th>
            </tr>

            <% record.map((val)=>{ %>
                <tr class="text-capitalize align-middle">
                    <td>
                        <%= val.name %>
                    </td>
                    <td>
                        <%= val.price %>
                    </td>
                    <td>
                        <%= val.page %>
                    </td>
                    <td>
                        <%= val.author %>
                    </td>
                    <td><button class="btn btn-light"><a href="/editData?id=<%= val.id %>"
                                class="text-decoration-none text-dark">Edit</a></button>
                    <button class="btn btn-light"><a href="/deleteData?id=<%= val.id %>"
                                class="text-decoration-none text-dark">Delete</a></button></td>
                </tr>
                <% })%>
        </table>

    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
</body>

</html>